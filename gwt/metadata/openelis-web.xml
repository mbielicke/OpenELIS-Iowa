  <!-- TimeTracker Servlets -->

  <servlet>
    <servlet-name>OpenELISService</servlet-name>
    <servlet-class>org.openelis.server.OpenELISServiceImpl</servlet-class>
   		<init-param>
              <param-name>app.root</param-name>
              <param-value>/usr/pub/http/Application/openelis/</param-value>
        </init-param>
        <init-param>
              <param-name>cas.logout.url</param-name>
              <param-value>https://www.uhl.uiowa.edu/cas/logout?destination=http://www.uhl.uiowa.edu/results/index.html</param-value>
        </init-param> 
        <load-on-startup>2</load-on-startup>
  </servlet>
  
 <servlet>
    <servlet-name>Static</servlet-name>
    <servlet-class>org.openelis.server.StaticServlet</servlet-class>
    <load-on-startup>3</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>org.openelis.server.LogoutServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <!-- inmsp Servlet Mappings-->
    
  <servlet-mapping>
    <servlet-name>OpenELISService</servlet-name>
    <url-pattern>/OpenELISService</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Static</servlet-name>
    <url-pattern>/OpenELIS</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
    
<session-config>
  <session-timeout>30</session-timeout>
</session-config>

<error-page>
   <error-code>404</error-code>
   <location>/.no_file.html</location>
</error-page>     
 
<listener>
  <listener-class>
    org.openelis.util.SessionManager
  </listener-class>
</listener>

</web-app>
