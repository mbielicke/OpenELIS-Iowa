
<web-app>
 <display-name>OpenELIS Web Application v0.0</display-name>
 <description>Initial Development of OpenELIS Web Applciation</description>
   
 <filter>
        <filter-name>CAS Filter</filter-name>
        <filter-class>edu.yale.its.tp.cas.client.filter.CASFilter</filter-class>
        <init-param>
            <param-name>edu.yale.its.tp.cas.client.filter.loginUrl</param-name>
            <param-value>https://www.uhl.uiowa.edu/cas/login</param-value>
        </init-param>
        <init-param>
            <param-name>edu.yale.its.tp.cas.client.filter.validateUrl</param-name>
            <param-value>https://www.uhl.uiowa.edu/cas/proxyValidate</param-value>
        </init-param>
        <init-param>
            <param-name>edu.yale.its.tp.cas.client.filter.serverName</param-name>
            <param-value>host.name</param-value>
        </init-param>
<!--        <init-param>
            <param-name>edu.yale.its.tp.cas.client.filter.renew</param-name>
            <param-value>true</param-value>
        </init-param>
-->        
    </filter>
 
  <filter-mapping>
    <filter-name>CAS Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
