
<web-app>
 <display-name>OpenELIS Web Application v0.0</display-name>
 <description>Initial Development of OpenELIS Web Applciation</description>
  
   <filter>
        <filter-name>Login Filter</filter-name>
        <filter-class>org.openelis.server.StaticFilter</filter-class>
        <init-param>
            <param-name>AppRoot</param-name>
            <param-value>/usr/pub/http/Application/openelis/</param-value>
        </init-param>
        <init-param>
            <param-name>ipTrys</param-name>
            <param-value>9</param-value>
        </init-param>
        <init-param>
            <param-name>userTrys</param-name>
            <param-value>3</param-value>
        </init-param>
    </filter>
 
  <filter-mapping>
    <filter-name>Login Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- OpenELISServlets Servlets -->

  <servlet>
    <servlet-name>OpenELISService</servlet-name>
    <servlet-class>org.openelis.server.OpenELISServiceImpl</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>OpenELISScreen</servlet-name>
    <servlet-class>org.openelis.server.OpenELISScreen</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>OrganizationServlet</servlet-name>
    <servlet-class>org.openelis.server.OrganizationServlet</servlet-class>
  </servlet>
    
  <servlet>
    <servlet-name>OrganizeFavoritesScreen</servlet-name>
    <servlet-class>org.openelis.server.OrganizeFavoritesScreen</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ProviderServlet</servlet-name>
    <servlet-class>org.openelis.server.ProviderServlet</servlet-class>
  </servlet>  
  
  <servlet>
    <servlet-name>DictionaryServlet</servlet-name>
    <servlet-class>org.openelis.server.DictionaryServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>QAEventServlet</servlet-name>
    <servlet-class>org.openelis.server.QAEventServlet</servlet-class>
  </servlet>
 
 <servlet>
    <servlet-name>StorageServlet</servlet-name>
    <servlet-class>org.openelis.server.StorageServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>StorageLocationServlet</servlet-name>
    <servlet-class>org.openelis.server.StorageLocationServlet</servlet-class>
  </servlet>

    <servlet>
    <servlet-name>StorageUnitServlet</servlet-name>
    <servlet-class>org.openelis.server.StorageUnitServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>StandardNoteServlet</servlet-name>
    <servlet-class>org.openelis.server.StandardNoteServlet</servlet-class>
  </servlet>
  
    <servlet>
    <servlet-name>StandardNotePickerServlet</servlet-name>
    <servlet-class>org.openelis.server.StandardNotePickerServlet</servlet-class>
  </servlet>
  <!-- inmsp Servlet Mappings-->
    
<servlet-mapping>
    <servlet-name>OpenELISScreen</servlet-name>
    <url-pattern>/OpenELISScreen</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>OrganizationServlet</servlet-name>
    <url-pattern>/OrganizationServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>StorageLocationServlet</servlet-name>
    <url-pattern>/StorageLocationServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>OrganizeFavoritesScreen</servlet-name>
    <url-pattern>/OrganizeFavoritesScreen</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>OpenELISService</servlet-name>
    <url-pattern>/OpenELISService</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ProviderServlet</servlet-name>
    <url-pattern>/ProviderServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>DictionaryServlet</servlet-name>
    <url-pattern>/DictionaryServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>QAEventServlet</servlet-name>
    <url-pattern>/QAEventServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>StorageServlet</servlet-name>
    <url-pattern>/StorageServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>StorageUnitServlet</servlet-name>
    <url-pattern>/StorageUnitServlet</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>StandardNoteServlet</servlet-name>
    <url-pattern>/StandardNoteServlet</url-pattern>
  </servlet-mapping>
  
      <servlet-mapping>
    <servlet-name>StandardNotePickerServlet</servlet-name>
    <url-pattern>/StandardNotePickerServlet</url-pattern>
  </servlet-mapping>
    
  <session-config>
    <session-timeout>300</session-timeout>
  </session-config>

  <error-page>
    <error-code>404</error-code>
    <location>/.no_file.html</location>
  </error-page>     
 
  <listener>
    <listener-class>
      org.openelis.util.SessionManager
    </listener-class>
  </listener>

</web-app>
