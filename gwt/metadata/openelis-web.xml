
<web-app>
 <display-name>OpenELIS Web Application v0.0</display-name>
 <description>Initial Development of OpenELIS Web Applciation</description>
  
   <filter>
        <filter-name>Login Filter</filter-name>
        <filter-class>org.openelis.server.StaticFilter</filter-class>
        <init-param>
            <param-name>AppRoot</param-name>
            <param-value>/usr/pub/http/Application/openelis/</param-value>
        </init-param>
        <init-param>
            <param-name>ipTrys</param-name>
            <param-value>9</param-value>
        </init-param>
        <init-param>
            <param-name>userTrys</param-name>
            <param-value>3</param-value>
        </init-param>
    </filter>
 
  <filter-mapping>
    <filter-name>Login Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- OpenELISServlets Servlets -->

  <servlet>
    <servlet-name>OpenELISService</servlet-name>
    <servlet-class>org.openelis.server.OpenELISServiceImpl</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>OpenELISScreen</servlet-name>
    <servlet-class>org.openelis.server.OpenELISScreen</servlet-class>
  </servlet>
  
    <servlet>
    <servlet-name>OrganizationServlet</servlet-name>
    <servlet-class>org.openelis.server.OrganizationServlet</servlet-class>
  </servlet>
    
  <servlet>
    <servlet-name>OrganizeFavoritesScreen</servlet-name>
    <servlet-class>org.openelis.server.OrganizeFavoritesScreen</servlet-class>
  </servlet>

  <!-- inmsp Servlet Mappings-->
    
<servlet-mapping>
    <servlet-name>OpenELISScreen</servlet-name>
    <url-pattern>/OpenELISScreen</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>OrganizationServlet</servlet-name>
    <url-pattern>/OrganizationServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>OrganizeFavoritesScreen</servlet-name>
    <url-pattern>/OrganizeFavoritesScreen</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>OpenELISService</servlet-name>
    <url-pattern>/OpenELISService</url-pattern>
  </servlet-mapping>
    
  <session-config>
    <session-timeout>300</session-timeout>
  </session-config>

  <error-page>
    <error-code>404</error-code>
    <location>/.no_file.html</location>
  </error-page>     
 
  <listener>
    <listener-class>
      org.openelis.util.SessionManager
    </listener-class>
  </listener>

</web-app>
