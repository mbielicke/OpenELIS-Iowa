<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="analysisPending" language="groovy" pageWidth="550" pageHeight="550" columnWidth="550" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.zoom" value="1.5"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<import value="org.openelis.utils.JasperUtil"/>
	<parameter name="SAMPLE_ID" class="java.lang.Integer"/>
	<queryString>
		<![CDATA[SELECT
     t.reporting_description t_reporting_description,
     m.reporting_description m_reporting_description
FROM
     analysis a, sample_item si, test t, method m, sample s
WHERE
     si.sample_id = $P{SAMPLE_ID} AND
     a.sample_item_id = si.id AND
     si.sample_id = s.id AND
     a.is_reportable = 'Y' AND
     a.test_id = t.id AND
     t.method_id = m.id   AND
     a.status_id NOT IN (SELECT id FROM dictionary where system_name in ('analysis_cancelled', 'analysis_released'))]]>
	</queryString>
	<field name="t_reporting_description" class="java.lang.String"/>
	<field name="m_reporting_description" class="java.lang.String"/>
	<variable name="PENDING_ANALYSIS_TEXT" class="java.lang.String">
		<variableExpression><![CDATA[$V{PENDING_ANALYSIS_TEXT}]]></variableExpression>
		<initialValueExpression><![CDATA[org.openelis.utils.JasperUtil.concatWithSeparator($F{t_reporting_description}," , ", $F{m_reporting_description})]]></initialValueExpression>
	</variable>
	<pageHeader>
		<band height="24">
			<staticText>
				<reportElement positionType="Float" x="0" y="5" width="550" height="14"/>
				<box bottomPadding="0"/>
				<textElement textAlignment="Center">
					<font size="12" isBold="true" pdfFontName="Times-Bold"/>
				</textElement>
				<text><![CDATA[Pending Analyses]]></text>
			</staticText>
		</band>
	</pageHeader>
	<detail>
		<band height="12" splitType="Stretch">
			<textField>
				<reportElement mode="Transparent" x="87" y="0" width="463" height="12" backcolor="#FFFFFF"/>
				<textElement>
					<font isBold="false" isItalic="false" pdfFontName="Times-Roman"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[org.openelis.utils.JasperUtil.concatWithSeparator($F{t_reporting_description},", ", $F{m_reporting_description})]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
