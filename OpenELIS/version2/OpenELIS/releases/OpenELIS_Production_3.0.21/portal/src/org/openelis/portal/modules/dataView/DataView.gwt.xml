<module>

	<replace-with
		class="org.openelis.portal.modules.dataView.client.DataViewUIMobileImpl">
		<when-type-assignable
			class="org.openelis.portal.modules.dataView.client.DataViewUI" />
		<when-property-is name="platform" value="phone" />
	</replace-with>

	<replace-with
		class="org.openelis.portal.modules.dataView.client.DataViewUITabletImpl">
		<when-type-assignable
			class="org.openelis.portal.modules.dataView.client.DataViewUI" />
		<when-property-is name="platform" value="tablet" />
	</replace-with>


</module>