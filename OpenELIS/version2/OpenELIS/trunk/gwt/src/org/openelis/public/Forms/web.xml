<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<servlet>
		<servlet-name>shell</servlet-name>
		<servlet-class>com.google.gwt.dev.shell.GWTShellServlet</servlet-class>
	</servlet>
	
    <servlet>
		<servlet-name>static</servlet-name>
		<servlet-class>org.openelis.server.StaticServlet</servlet-class>
		<init-param>
		  <param-name>hosted</param-name>
		  <param-value>true</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>xslt</servlet-name>
		<servlet-class>org.openelis.server.XSLTServlet</servlet-class>
		<init-param>
		  <param-name>hosted</param-name>
		  <param-value>true</param-value>
		</init-param>
		<init-param>
		   <param-name>AppRoot</param-name>
		   <param-value>/home/tschmidt/workspace/gwt-svn/src/org/openelis/public</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>static</servlet-name>
		<servlet-class>org.openelis.server.StaticServlet</servlet-class>
		<init-param>
		  <param-name>hosted</param-name>
		  <param-value>true</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>shell</servlet-name>
		<url-pattern>/shell/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>static</servlet-name>
		<url-pattern>/OpenELIS</url-pattern>
	</servlet-mapping>

</web-app>
