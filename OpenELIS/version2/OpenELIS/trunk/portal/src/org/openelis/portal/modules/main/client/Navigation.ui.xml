<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openelis.ui.widget">

  <ui:with type="org.openelis.portal.messages.PortalMessages" field="msg" />
  <ui:with type="org.openelis.portal.client.resources.Resources" field="res" />
  
    <ui:style>
    .flow {
		display:inline-flex;
		flex-direction:column;
		flex-wrap:wrap;
		width:10px;
		height : 100%;
		margin-top:5px;
	}
  </ui:style>
  
          <g:TabLayoutPanel barHeight="25" barUnit="PX">
            <g:tab>
              <g:header><ui:text from="{msg.main_reports}"/></g:header>
              <g:LayoutPanel styleName="{res.style.WhiteContentPanel}">
                <g:layer>
                  <g:HTMLPanel styleName="{style.flow}">
                    <div style="width:175px;">
              	      <w:Button ui:field="finalReport" text="{msg.main_finalReport}" css="{res.portalButton}" enabled="true"/>
              	    </div>
              	    <div style="width:175px;">
              	      <w:Button ui:field="dataView" text="{msg.main_dataView}" css="{res.portalButton}" enabled="true"/>
              	    </div>
              	    <div style="width:175px;">
                      <w:Button ui:field="sampleStatus" text="{msg.main_sampleStatus}" css="{res.portalButton}" enabled="true"/>
              	    </div>
                    <div style="width:175px;">
                	  <w:Button ui:field="testRequest" text="{msg.main_testRequest}" css="{res.portalButton}" enabled="true"/>
                    </div>
                  </g:HTMLPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:tab>
            <g:tab>
              <g:header><ui:text from="{msg.main_accountInfo}"/></g:header>
              <g:LayoutPanel  styleName="{res.style.WhiteContentPanel}">
                <g:layer>
                  <g:HTMLPanel styleName="{style.flow}">
                    <div style="width:175px">
                      <w:Button ui:field="emailNotification" text="{msg.main_emailNotification}" css="{res.portalButton}" enabled="true"/>
                    </div>
                    <div style="width:175px">
              	      <w:Button ui:field="logout" text="{msg.main_logout}" css="{res.portalButton}" enabled="true"/>
                  	</div>
                  </g:HTMLPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:tab>
            <g:tab>
              <g:header>STFU</g:header>
              <g:LayoutPanel  styleName="{res.style.WhiteContentPanel}">
                <g:layer>
                  <g:HTMLPanel styleName="{style.flow}">
                    <div style="width:175px">
                      <w:Button ui:field="cases" text="Active Cases" css="{res.portalButton}" enabled="false"/>
                    </div>
                  </g:HTMLPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:tab>
          </g:TabLayoutPanel>
</ui:UiBinder>