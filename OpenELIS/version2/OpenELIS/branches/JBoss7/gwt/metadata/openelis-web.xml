<web-app>
 <display-name>OpenELIS Application V2</display-name>
 <description>OpenELIS Application for Laboratory</description>
  
   <filter>
        <filter-name>Login Filter</filter-name>
        <filter-class>org.openelis.server.StaticFilter</filter-class>
        <init-param>
        	<!-- Full path to the XSL stylesheet for login screen -->
            <param-name>LoginXSL</param-name>
            <param-value>${catalina.home}/apps/openelis/login.xsl</param-value>
        </init-param>
        <init-param>
        	<!-- Wrapper HTML for application -->
            <param-name>LoginHTML</param-name>
            <param-value>OpenELIS.html</param-value>
        </init-param>
        <init-param>
        	<!-- Lock timeout in milli seconds (1sec = 1000) that we are going to
        	     ignore requests once we exceed user or ip counts retries.  -->
            <param-name>LoginLockoutTime</param-name>
            <param-value>600000</param-value>
        </init-param>
        <init-param>
        	<!-- # of retries before we ignore any login request from that IP address -->
            <param-name>LoginIPRetryCount</param-name>
            <param-value>7</param-value>
        </init-param>
        <init-param>
        	<!-- # of retries before we ignore any login request for that user -->
            <param-name>LoginNameRetryCount</param-name>
            <param-value>4</param-value>
        </init-param>
        <init-param>
        	<!-- Fully qualified class name for the constants -->
        	<param-name>ConstantsPath</param-name>
            <param-value>org.openelis.constants.OpenELISConstants</param-value>
        </init-param>
        <init-param>
        	<!-- Constant key for authentication message failure in constants file -->
            <param-name>ConstantsAuthFailure</param-name>
            <param-value>authFailure</param-value>
        </init-param>
        <init-param>
        	<!-- Java JNDI variable that specified the path to the "jndi.properties" file -->
            <param-name>ServerJNDIProperties</param-name>
            <param-value>java:comp/env/openelisJNDI</param-value>
        </init-param>
    </filter>
 
  <filter-mapping>
    <filter-name>Login Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- Servlets -->

  <servlet>
    <servlet-name>OpenELISServlet</servlet-name>
    <servlet-class>org.openelis.gwt.server.ScreenControllerServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>org.openelis.gwt.server.ReportServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>org.openelis.gwt.server.FileServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>SampleManagerTestServlet</servlet-name>
    <servlet-class>org.openelis.modules.sampleManagerTest.server.SampleManagerTestServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>OpenELISServlet</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>SampleManagerTestServlet</servlet-name>
    <url-pattern>/sampleManagerTest</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>300</session-timeout>
  </session-config>

  <error-page>
    <error-code>404</error-code>
    <location>/.no_file.html</location>
  </error-page>     
 
  <listener>
    <listener-class>
      org.openelis.util.SessionManager
    </listener-class>
  </listener>
  
  <resource-ref>
    <res-ref-name>openELISJNDI</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>