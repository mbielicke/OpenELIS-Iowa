<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:w='urn:import:org.openelis.ui.widget' xmlns:r='urn:import:org.openelis.ui.widget.tree'
  xmlns:t='urn:import:org.openelis.ui.widget.table' xmlns:c="urn:import:org.openelis.ui.widget.calendar"
  xmlns:s="urn:import:org.openelis.modules.sample1.client"
>
  <!-- this tab uses xsl:when and xsl:otherwise to determine the layout of the widgets-->
  <ui:with type="org.openelis.constants.OpenELISConstants" field="msg" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="uiRes" />
  <ui:with type="org.openelis.modules.main.client.resources.OpenELISResources" field="res" />
  <g:LayoutPanel>
    <g:layer top="0px" bottom="45px">
      <t:Table ui:field="auxValsTable" verticalScroll="ALWAYS" visibleRows="8"
        horizontalScroll="ALWAYS" header="true"
      > <!-- maxRows="{string($maxRows)}" -->
        <t:Column width="85" label="{msg.reportable}">
          <t:CheckBoxCell>
            <w:Check /> <!-- key="auxDataReportable" -->
          </t:CheckBoxCell>
        </t:Column>
        <t:Column width="130" label="{msg.name}"> <!-- width="{string($col2Width)}" -->
          <t:LabelCell />
        </t:Column>
        <t:Column width="130" label="{msg.value}"> <!-- width="{string($col3Width)}" class="org.openelis.modules.sample.client.AuxTableColumn" -->
          <t:LabelCell />
        </t:Column>
      </t:Table>
    </g:layer>
    <g:layer bottom="30px" height="25px">
      <g:HorizontalPanel>
        <w:Button ui:field="removeAuxButton" leftIcon="{res.style.removeRowIcon}" text="{msg.removeRow}" />
        <w:Button ui:field="addAuxButton" text="{msg.auxGroups}" /> <!-- leftIcon="{res.style.PickerButtonImage}" -->
      </g:HorizontalPanel>
    </g:layer>
    <g:layer bottom="5px" height="30px">
      <g:HTMLPanel>
        <table class="{res.style.Form}">
          <tr>
            <td class="{res.style.Prompt}">
              <ui:text from="{msg.description}" />
            </td>
            <td>
              <w:TextBox ui:field="auxDesc" width="275px" field="String" /> <!-- style="ScreenTextboxDisplayOnly" -->
            </td>
            <td class="{res.style.Prompt}">
              <ui:text from="{msg.method}" />
            </td>
            <td>
              <w:TextBox ui:field="auxMethod" width="125px" />  <!-- style="ScreenTextboxDisplayOnly" -->
            </td>
            <td class="{res.style.Prompt}">
              <ui:text from="{msg.unit}" />
            </td>
            <td>
              <w:TextBox ui:field="auxUnits" width="125px" />  <!-- style="ScreenTextboxDisplayOnly" -->
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>