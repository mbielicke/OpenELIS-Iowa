<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:w='urn:import:org.openelis.ui.widget' xmlns:r='urn:import:org.openelis.ui.widget.tree'
  xmlns:t='urn:import:org.openelis.ui.widget.table' xmlns:s="urn:import:org.openelis.modules.sample1.client"
>
  <ui:with type="org.openelis.constants.OpenELISConstants" field="msg" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="uiRes" />
  <ui:with type="org.openelis.modules.main.client.resources.OpenELISResources" field="res" />
  <g:LayoutPanel styleName="{res.style.WhiteContentPanel}">
    <g:layer top="0px" height="170px">
      <g:HTMLPanel>
        <table class="{res.style.Form}">
          <tr>
            <td class="{res.style.Prompt}">
              <ui:text from="{msg.subject}:" />
            </td>
            <td>
              <w:TextBox ui:field="subject" width="500px" />
            </td>
          </tr>
          <tr>
            <td class="{res.style.Prompt}">
              <ui:text from="{msg.text}:" /> <!-- valign="top" -->
            </td>
            <td>
              <w:TextArea ui:field="text" width="500px" height="135px" />
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
    </g:layer>
    <g:layer top="180px" height="40px">
      <g:HTMLPanel>
        <table class="{res.style.Form}">
          <tr>
            <td>
              <w:TextBox ui:field="find" width="190px" />
            </td>
            <td>
              <w:Button ui:field="findButton" text="{msg.find}" /> <!-- style="FindButtonImage" -->
            </td>
            <td>
              <w:Button ui:field="pasteButton" text="{msg.paste}" /> <!-- style="pasteIcon" -->
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
    </g:layer>
    <g:layer top="230px" height="240px">
      <g:LayoutPanel styleName="{res.style.WhiteContentPanel}">
        <g:layer top="0px" height="230px" left="0px" width="50%">
          <r:Tree ui:field="noteTree" styleName="{uiRes.table.ScreenTableWithSides}">
            <r:Column width="230" />
            <r:Leaf key="category">
              <r:LeafColumn>
                <t:LabelCell />
              </r:LeafColumn>
            </r:Leaf>
            <r:Leaf key="note">
              <r:LeafColumn>
                <t:LabelCell />
              </r:LeafColumn>
            </r:Leaf>
          </r:Tree>
        </g:layer>
        <g:layer top="0px" height="230px" right="0px" width="50%">
          <w:TextArea ui:field="preview" width="280px" height="225px"/> <!-- style="ScreenTableWithSides,ScreenTextArea" -->
        </g:layer>
      </g:LayoutPanel>
    </g:layer>
    <g:layer bottom="0px" height="25px"> <!-- style="BottomButtonPanelContainer" -->
      <g:HorizontalPanel>
        <w:Button ui:field="okButton" text="{msg.ok}" />
        <w:Button ui:field="cancelButton" text="{msg.cancel}" />
      </g:HorizontalPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>