<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui' 
             xmlns:w='urn:import:org.openelis.ui.widget'
             xmlns:t='urn:import:org.openelis.ui.widget.table'
             xmlns:c='urn:import:org.openelis.ui.widget.calendar'
             xmlns:r='urn:import:org.openelis.ui.widget.tree'
             xmlns:l='urn:import:org.openelis.ui.widget.columnar'
             xmlns:f='urn:import:org.openelis.web.modules.followup.client'>
             
    
  <ui:with type="org.openelis.constants.OpenELISConstants" field="msg" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="uiRes" />
  <ui:with type="org.openelis.web.modules.main.client.resources.Resources" field="res" />
  
  <g:LayoutPanel>
    <g:layer top="0px" bottom="25px">
      <g:SplitLayoutPanel>
        <g:north size="100">
          <t:Table ui:field="sample" header="true" styleName="{uiRes.table.ScreenTableWithSides}">
            <t:Column width="100" label="Accession #">
              <t:LabelCell/>
            </t:Column>
            <t:Column width="250" label="Organization">
              <t:LabelCell/>
            </t:Column>
            <t:Column width="100" label="Collected" enabled="false">
              <t:CalendarCell>
                <c:Calendar begin="0" end="2"/>
              </t:CalendarCell>
            </t:Column>
            <t:Column width="150" label="Interpretaion">
              <t:LabelCell/>
            </t:Column>
            <t:Column width="100" label="Value">
              <t:LabelCell/>
            </t:Column>
          </t:Table>
        </g:north>
        <g:center>
          <f:EncounterTable ui:field="encounters"/>
        </g:center>
      </g:SplitLayoutPanel>
    </g:layer>
    <g:layer bottom="0px" height="25px">
      <g:HorizontalPanel>
        <w:Button ui:field="newContact" text="New Contact"/>
        <w:Button ui:field="newRecommendation" text="New Recommendation"/>
        <w:Button ui:field="newConfirmatory" text="New Confirmatory"/>
        <w:Button ui:field="closeCondition" text="Close Condition"/>
      </g:HorizontalPanel>
    </g:layer>
  </g:LayoutPanel>

</ui:UiBinder>