     sp.sample_id = $P{SAMPLE_ID} and
     sp.is_permanent = 'Y'
ORDER BY sp_id]]>
	</queryString>
	<field name="sp_id" class="java.lang.Integer"/>
	<field name="project_name" class="java.lang.String"/>
	<detail>
