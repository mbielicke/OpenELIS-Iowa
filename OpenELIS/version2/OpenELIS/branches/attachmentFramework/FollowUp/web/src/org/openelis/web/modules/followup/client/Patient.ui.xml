<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui' 
             xmlns:w='urn:import:org.openelis.ui.widget'
             xmlns:t='urn:import:org.openelis.ui.widget.table'
             xmlns:c='urn:import:org.openelis.ui.widget.calendar'
             xmlns:r='urn:import:org.openelis.ui.widget.tree'
             xmlns:l='urn:import:org.openelis.ui.widget.columnar'>
             
    
  <ui:with type="org.openelis.constants.OpenELISConstants" field="msg" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="uiRes" />
  <ui:with type="org.openelis.web.modules.main.client.resources.Resources" field="res" />
  
  <g:LayoutPanel>
    <g:layer left="0px" width="250px">
      <g:LayoutPanel>
        <g:layer top="0px" height="170px">
          <g:HTMLPanel>
            <table class="{res.style.Form}">
              <tr class="{res.style.FormTitle}">
                <td >Patient</td>
                <td>
                  <w:Button text="Update Patient"/>
                </td>
              </tr>
              <tr>
                <td class="{res.style.Prompt}">Last:</td>
                <td>
                  <w:TextBox ui:field="last"/>
                </td>
              </tr>
              <tr>
                <td class="{res.style.Prompt}">First:</td>
                <td>
                  <w:TextBox ui:field="first"/>
                </td>
              </tr>
              <tr>
                <td class="{res.style.Prompt}">Birth date:</td>
                <td>
                  <w:TextBox ui:field="birth"/>
                </td>
              </tr>
              <tr>
                <td class="{res.style.Prompt}">Gender:</td>
                <td>
                  <w:TextBox ui:field="gender"/>
                </td>
              </tr>
              <tr>
                <td class="{res.style.Prompt}">Address:</td>
                <td>
                  <w:TextBox ui:field="address"/>
                </td>
              </tr>
            </table>
          </g:HTMLPanel>  
        </g:layer>
        <g:layer top="170px" height="130px">
              <g:HTMLPanel>
                <table class="{res.style.Form}">
                  <tr class="{res.style.FormTitle}">
                    <td colspan="2">Next of Kin</td>
                  </tr>
                  <tr>
                    <td class="{res.style.Prompt}">Last:</td>
                    <td>
                      <w:TextBox ui:field="kinLast"/>
                    </td>
                  </tr>
                  <tr>
                    <td class="{res.style.Prompt}">First:</td>
                    <td>
                      <w:TextBox ui:field="kinFirst"/>
                    </td>
                  </tr>
                  <tr>
                    <td class="{res.style.Prompt}">Relation:</td>
                    <td>
                      <w:TextBox ui:field="relation"/>
                    </td>
                  </tr>
                  <tr>
                    <td class="{res.style.Prompt}">Address:</td>
                    <td>
                      <w:TextBox ui:field="kinAddress"/>
                    </td>
                  </tr>
                </table>
              </g:HTMLPanel>
            </g:layer>
            <g:layer top="300px" bottom="0px">
              <t:Table header="true" ui:field="organizations" styleName="{uiRes.table.ScreenTableWithSides}">
                <t:Column label="Organizations">
                  <t:LabelCell/>
                </t:Column>
              </t:Table>
        </g:layer>    
      </g:LayoutPanel>
    </g:layer>
    <g:layer left="255px" right="0px">
      <g:LayoutPanel>
        <g:layer top="0px" height="20px">
          <g:HTMLPanel>
            <div style="width:100%; height:100%;" class="{res.style.FormTitle}">Lab Screening Results</div>
          </g:HTMLPanel>
        </g:layer>
        <g:layer top="20px" bottom="0px">
          <l:Columnar ui:field="results" styleName="{uiRes.table.ScreenTableWithSides}">
            <l:Line label="Specimens">
              <t:LabelCell/>
            </l:Line>
            <l:Line label="Chart">
              <t:LabelCell/>
            </l:Line>
            <l:Line label="Gest Age">
              <t:LabelCell/>
            </l:Line>
            <l:Line label="Transfused">
              <t:LabelCell/>
            </l:Line>
            <l:Line label="Feeding">
              <t:LabelCell/>
            </l:Line>
            <l:Line label="CAH">
              <t:LabelCell/>
            </l:Line>         
            <l:Line label="TSH">
              <t:LabelCell/>
            </l:Line>         
            <l:Line label="BT">
              <t:LabelCell/>
            </l:Line>        
            <l:Line label="GALT">
              <t:LabelCell/>
            </l:Line>          
            <l:Line label="HB">
              <t:LabelCell/>
            </l:Line>        
            <l:Line label="IRT">
              <t:LabelCell/>
            </l:Line>         
            <l:Line label="CFTR">
              <t:LabelCell/>
            </l:Line>          
            <l:Line label="TMS">
              <t:LabelCell/>
            </l:Line>                                             
          </l:Columnar>
        </g:layer>
      </g:LayoutPanel>
    </g:layer>
  </g:LayoutPanel>
  
</ui:UiBinder>