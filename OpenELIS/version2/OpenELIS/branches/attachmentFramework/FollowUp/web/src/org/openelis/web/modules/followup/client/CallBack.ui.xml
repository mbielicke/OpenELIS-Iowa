<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w='urn:import:org.openelis.ui.widget'
  xmlns:t='urn:import:org.openelis.ui.widget.table' xmlns:c='urn:import:org.openelis.ui.widget.calendar' xmlns:r='urn:import:org.openelis.ui.widget.tree'
  xmlns:l='urn:import:org.openelis.ui.widget.columnar' xmlns:f='urn:import:org.openelis.web.modules.followup.client'>


  <ui:with type="org.openelis.constants.OpenELISConstants" field="msg" />
  <ui:with type="org.openelis.web.modules.main.client.resources.Resources" field="res" />

  <g:LayoutPanel styleName="{res.style.ContentPanel}">
    <g:layer>
      <g:HTMLPanel>
        <table class="{res.style.Form}">
          <tr>
            <td class="{res.style.Prompt}">User:</td>
            <td>
              <w:TextBox ui:field="user" required="true"/>
            </td>
          </tr>
          <tr>
            <td class="{res.style.Prompt}">Created:</td>
            <td>
              <c:Calendar begin="0" end="4" ui:field="created" required="true"/>
            </td>
          </tr>
          <tr>
            <td class="{res.style.Prompt}">Reminder:</td>
            <td>
              <c:Calendar begin="0" end="4" ui:field="reminder" required="true"/>
            </td>
          </tr>
          <tr>
            <td class="{res.style.Prompt}">Note:</td>
            <td>
              <w:TextArea ui:field="note"/>
            </td>
          </tr>
          <tr>
            <td colspan="2" align="center">
              <g:HorizontalPanel>
                <w:Button ui:field="ok" text="OK"/>
                <w:Button ui:field="cancel" text="Cancel"/>
              </g:HorizontalPanel>
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>