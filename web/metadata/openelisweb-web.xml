<web-app>
 <display-name>OpenELIS Web Application v0.0</display-name>
 <description>Initial Development of OpenELIS Web Applciation</description>
  
   <filter>
        <filter-name>Login Filter</filter-name>
        <filter-class>org.openelis.web.server.StaticFilter</filter-class>
        <init-param>
            <param-name>AppRoot</param-name>
            <param-value>${catalina.home}/apps/openelisweb/</param-value>
        </init-param>
        <init-param>
            <param-name>ipTrys</param-name>
            <param-value>9</param-value>
        </init-param>
        <init-param>
            <param-name>userTrys</param-name>
            <param-value>3</param-value>
        </init-param>
    </filter>
 
  <filter-mapping>
    <filter-name>Login Filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- OpenELISServlets Servlets -->

  <servlet>
    <servlet-name>OpenELISServlet</servlet-name>
    <servlet-class>org.openelis.gwt.server.ScreenControllerServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>PreferencesServlet</servlet-name>
    <servlet-class>org.openelis.web.server.PreferencesServlet</servlet-class>
    <load-on-startup>3</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>org.openelis.gwt.server.ReportServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>OpenELISServlet</servlet-name>
    <url-pattern>/OpenELISServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>PreferencesServlet</servlet-name>
    <url-pattern>/PreferencesServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>OpenELISServlet</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/report</url-pattern>
  </servlet-mapping>
      
  <session-config>
    <session-timeout>300</session-timeout>
  </session-config>

  <error-page>
    <error-code>404</error-code>
    <location>/.no_file.html</location>
  </error-page>     
 
  <listener>
    <listener-class>
      org.openelis.util.SessionManager
    </listener-class>
  </listener>
  
  <resource-ref>
    <res-ref-name>openELISJNDI</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
