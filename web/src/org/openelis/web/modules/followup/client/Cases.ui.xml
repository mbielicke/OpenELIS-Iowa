<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui' 
             xmlns:w='urn:import:org.openelis.ui.widget'
             xmlns:t='urn:import:org.openelis.ui.widget.table'
             xmlns:c='urn:import:org.openelis.ui.widget.calendar'
             xmlns:r='urn:import:org.openelis.ui.widget.tree'
             xmlns:f='urn:import:org.openelis.web.modules.followup.client'>
             
    
  <ui:with type="org.openelis.constants.OpenELISConstants" field="msg" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="uiRes" />
  <ui:with type="org.openelis.web.modules.main.client.resources.Resources" field="res" />
  
  <g:LayoutPanel styleName="{res.style.ContentPanel}">
    <g:layer>
      <g:SplitLayoutPanel>
        <!--  Top Case List -->
        <g:north size="400">
          <g:SplitLayoutPanel>
            <!-- Left Hand Menu -->
            <g:west size="200">
              <r:Tree ui:field="navigation" header="false">
                <r:Column width="200"/>
                <r:Leaf key="top">
                  <r:LeafColumn>
                    <t:LabelCell/>
                  </r:LeafColumn>
                </r:Leaf>
              </r:Tree>
            </g:west>
            <!-- Case Table -->
            <g:center>
              <g:LayoutPanel>
                <g:layer top="0px" height="40px">
                  <g:HorizontalPanel>
                    <w:Dropdown ui:field="tag" width="150px"/>
                    <w:Button ui:field="takeCase" text="Take Case"/>
                    <w:TextBox ui:field="searchCases"/>
                  </g:HorizontalPanel>
                </g:layer>
                <g:layer top="40px" bottom="0px">
                  <t:Table ui:field="cases" header="true" styleName="{uiRes.table.ScreenTableWithSides}">
                    <t:Column width="50">
                      <t:CheckBoxCell/>
                    </t:Column>
                    <t:Column label="Patient" width="200">
                      <t:LabelCell/>
                    </t:Column>
                    <t:Column label="Birth Date" width="100">
                      <t:CalendarCell>
                        <c:Calendar begin="0" end="2"/>
                      </t:CalendarCell>
                    </t:Column>
                    <t:Column label="Organization" width="300">
                      <t:LabelCell/>
                    </t:Column>
                    <t:Column label="Owner" width="150">
                      <t:LabelCell/>
                    </t:Column>
                    <t:Column label="Status/Waiting" width="250">
                      <t:LabelCell/>
                    </t:Column>
                  </t:Table>
                </g:layer>
              </g:LayoutPanel>
            </g:center>
          </g:SplitLayoutPanel>
        </g:north>
        <!-- Patient Info -->
        <g:center>
          <w:TabLayoutPanel barHeight="20" barUnit="PX">
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="Patient Lab"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:PatientTab ui:field="patientTab"/>
                </g:layer>
              </g:LayoutPanel>
            </w:tab>
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="Case History"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:CaseHistoryTab/>
                </g:layer>
              </g:LayoutPanel>
            </w:tab>
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="CAH"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="cah"/>
                </g:layer>
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="TSH"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="tsh"/>
                </g:layer>
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="BT"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="bt"/>
                </g:layer>              
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="GALT"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="galt"/>
                </g:layer>              
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="HB"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="hb"/>
                </g:layer>              
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="IRT"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="irt"/>
                </g:layer>              
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="CFTR"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="cftr"/>
                </g:layer>
              </g:LayoutPanel>
            </w:tab>            
            <w:tab>
              <w:customHeader>
                <w:TabWidget text="TMS"/>
              </w:customHeader>
              <g:LayoutPanel>
                <g:layer>
                  <f:ConditionTab ui:field="tms"/>
                </g:layer>              
              </g:LayoutPanel>
            </w:tab>            
          </w:TabLayoutPanel>
        </g:center>
      </g:SplitLayoutPanel>
    </g:layer>
  </g:LayoutPanel>
  
</ui:UiBinder>