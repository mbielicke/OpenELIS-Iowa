<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:org.openelis.ui.widget">

  <ui:with type="org.openelis.portal.messages.PortalMessages" field="msg" />
  <ui:with type="org.openelis.portal.client.resources.Resources" field="res" />
  
    <ui:style>
    .flow {
		display:inline-flex;
		flex-direction:column;
		flex-wrap:wrap;
		width:10px;
		height : 100%;
	}
  </ui:style>
  
          <g:TabLayoutPanel barHeight="20" barUnit="PX">
            <g:tab>
              <g:header><ui:text from="{msg.main_reports}"/></g:header>
              <g:LayoutPanel>
                <g:layer>
                  <g:HTMLPanel styleName="{style.flow}">
                    <div style="width:175px;" class="{res.style.Link}">
              	      <g:Anchor ui:field="finalReport" text="{msg.main_finalReport}"/>
              	    </div>
              	    <div style="width:175px;" class="{res.style.Link}">
              	      <g:Anchor ui:field="dataView" text="{msg.dataView}"/>
              	    </div>
              	    <div style="width:175px;" class="{res.style.Link}">
                      <g:Anchor ui:field="sampleStatus" text="{msg.main_sampleStatus}"/>
              	    </div>
                    <div style="width:175px;" class="{res.style.Link}">
                	  <g:Anchor ui:field="testRequest" text="{msg.main_testRequest}"/>
                    </div>
                  </g:HTMLPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:tab>
            <g:tab>
              <g:header><ui:text from="{msg.main_accountInfo}"/></g:header>
              <g:LayoutPanel>
                <g:layer>
                  <g:HTMLPanel styleName="{style.flow}">
                    <div style="width:175px" class="{res.style.Link}">
                      <g:Anchor ui:field="emailNotification" text="{msg.main_emailNotification}"/>
                    </div>
                    <div style="width:175px" class="{res.style.Link}">
              	      <g:Anchor ui:field="logout" text="{msg.main_logout}"/>
                  	</div>
                  </g:HTMLPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:tab>
          </g:TabLayoutPanel>
</ui:UiBinder>